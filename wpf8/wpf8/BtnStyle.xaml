<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="abc">
        <Setter Property="Background" Value="{DynamicResource Def}"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="160"/>
        <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource abc}"  x:Key="Default">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background = "{TemplateBinding Background}"
                BorderBrush = "{TemplateBinding BorderBrush}"
                Height = "{TemplateBinding Height}"
                Width="{TemplateBinding Width}"
                CornerRadius="10">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4"/>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource MouseOver}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource Pressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>