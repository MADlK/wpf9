<Page x:Class="wpf8.Pages.CreatePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePatientPage">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="20"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="v">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource Default}">
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="10" />
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="q">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="10">
            <TextBlock Text="Создание нового пациента" Style="{StaticResource q}"/>
        </Border>

        <StackPanel Grid.Row="1" >
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" />

            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox" />

            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox" />

            <Label Content="Дата рождения:"/>
            <DatePicker x:Name="BirthdayDatePicker" />

            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" />

            <TextBlock x:Name="MessageTextBlock" />
        </StackPanel>


        <StackPanel  Style="{StaticResource v}" Grid.Row="2">
            <Button Content="Назад" Click="BackButton_Click" />
            <Button Content="Создать" Click="CreateButton_Click" />
        </StackPanel>

    </Grid>
</Page>
