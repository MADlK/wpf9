<Page x:Class="wpf8.Pages.CreatePatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePatientPage">


    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" >
            <TextBlock Text="Создание нового пациента" Style="{StaticResource q}"/>
        </Border>

        <StackPanel Grid.Row="1" Style="{StaticResource baseCreatP}">
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" />

            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox" />

            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox" />

            <Label Content="Дата рождения:"/>
            <DatePicker x:Name="BirthdayDatePicker" />

            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" />

            <TextBlock x:Name="MessageTextBlock" />
        </StackPanel>


        <StackPanel  Style="{StaticResource v}" Grid.Row="2">
            <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource BASEBTNCREATEP}"/>
            <Button Content="Создать" Click="CreateButton_Click" Style="{StaticResource ADDBTN}"/>
        </StackPanel>

    </Grid>
</Page>
