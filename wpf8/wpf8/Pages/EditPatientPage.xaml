<Page x:Class="wpf8.Pages.EditPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPatientPage">


    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource Default}"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="q">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource BCKG}"/>
        </Style>

        <Style TargetType="StackPanel" BasedOn="{StaticResource q}" x:Key="qw">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        


    </Page.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Style="{StaticResource q}">
            <TextBlock Text="Редактирование пациента" />
            <TextBlock x:Name="PatientIdText" />
        </StackPanel>

        <StackPanel Grid.Row="1" Style="{StaticResource q}">
            <Label Content="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox" />

            <Label Content="Имя:"/>
            <TextBox x:Name="NameTextBox" />

            <Label Content="Отчество:"/>
            <TextBox x:Name="MiddleNameTextBox" />

            <Label Content="Дата рождения:"/>
            <DatePicker x:Name="BirthdayDatePicker"/>

            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox"/>

            <TextBlock x:Name="MessageTextBlock"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Style="{StaticResource qw}">
            <Button Content="Назад" Click="BackButton_Click"/>
            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
