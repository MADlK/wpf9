<Page x:Class="wpf8.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">


    <Page.Resources>
       
    </Page.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Style="{StaticResource RPBASE}" >
            <TextBlock Text="Регистрация нового врача" Style="{StaticResource BASEREGP}"/>
        </StackPanel>

        <StackPanel  Grid.Row="1"  Style="{StaticResource RPBASE}" >
            <StackPanel Style="{StaticResource Z}">
                <Label Content="Фамилия:"/>
                <Label Content="Имя:"/>
                <Label Content="Отчество:"/>
                <Label Content="Специализация:"/>
                <Label Content="Пароль:"/>
                <Label Content="Подтверждение пароля:"/>

            </StackPanel>

            <!--Z-->
            <StackPanel  Style="{StaticResource Z}">
                <TextBox x:Name="LastNameTextBox" Style="{StaticResource BASEREGPTBOX}"/>
                <TextBox x:Name="NameTextBox" Style="{StaticResource BASEREGPTBOX}"/>
                <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource BASEREGPTBOX}"/>
                <ComboBox x:Name="SpecialisationComboBox" Style="{StaticResource RPCB}" >
                    <ComboBoxItem Content="Окулист"/>
                    <ComboBoxItem Content="Психолог"/>
                    <ComboBoxItem Content="Логопед"/>
                </ComboBox>
                <PasswordBox x:Name="PasswordBox1" Style="{StaticResource RPPB}"/>
                <PasswordBox x:Name="PasswordBox2" Style="{StaticResource RPPB}"/>

            </StackPanel>

            <TextBlock x:Name="MessageTextBlock" Style="{StaticResource BASEREGP}"/>
        </StackPanel>

        <StackPanel Grid.Row="2"  Style="{StaticResource B}" >
            <Button Content="Назад" Click="BackButton_Click" />
            <Button Content="Зарегистрировать" Click="RegisterButton_Click" Style="{StaticResource ADDBTN}" />
        </StackPanel>
    </Grid>
</Page>
