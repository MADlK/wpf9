<Page x:Class="wpf8.Pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">

  
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Style="{StaticResource qo}">
            <Button Click="AddButton_Click" Content="Добавить" Style="{StaticResource ADDBTN}"/>
            <Button Click="DeleteItem_Click" Content="Удалить" Style="{StaticResource DELBTN}"/>
        </StackPanel>
        <ListView 
            Grid.Row="1"
            ItemsSource="{Binding Users}"
            SelectedItem="{Binding SelectedUser}"
            Style="{StaticResource LVLP}"
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Style="{StaticResource qo}">
                            <TextBlock Text="Идентификатор: "/>
                            <TextBlock Text="{Binding Id}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource qo}">
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource qo}">
                            <TextBlock Text="Возраст: "/>
                            <TextBlock Text="{Binding Age}"/>
                        </StackPanel>
                        <StackPanel Style="{StaticResource qo}">
                            <TextBlock Text="Адрес электронной почты: "/>
                            <TextBlock Text="{Binding Email}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Style="{StaticResource LISTPAGESP}" 
            Grid.Row="2"
            Grid.ColumnSpan="2">
            <Label>Всего в списке:</Label>
            <Label Content="{Binding Users.Count}"/>
        </StackPanel>
    </Grid>
</Page>
