<Page x:Class="wpf8.Pages.UserFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserFormPage">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource Default}"/>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>

    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="ID"/>
            <Label Content="Имя"/>
            <Label Content="Адрес электронной почты"/>
            <Label Content="Возраст"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Text="{Binding Id}"/>
            <TextBox Text="{Binding Name}"/>
            <TextBox Text="{Binding Email}"/>
            <TextBox Text="{Binding Age}"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Click="AddButton_Click" Content="Сохранить" Style="{StaticResource ADDBTN}"/>
            <Button Click="BackButton_Click" Content="Назад"/>
        </StackPanel>

    </Grid>
</Page>
