<Page x:Class="wpf8.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppointmentPage">

    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <TextBlock Text="Приём пациента"  />
            <TextBlock x:Name="PatientInfoText" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"  Style="{StaticResource AppointbaseSP}">
                <Label Content="Новый приём" Style="{StaticResource new}"/>

                <Label Content="Диагноз:"/>
                <TextBox x:Name="DiagnosisTextBox" Style="{StaticResource APPOINTTB}"/>

                <Label Content="Рекомендации:" />
                <TextBox x:Name="RecommendationsTextBox" Style="{StaticResource APPOINTTB}"/>

                <Button Content="Сохранить приём" Click="SaveAppointmentButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="1" >
                <Label Content="История приёмов" Style="{StaticResource new}"/>

                <ListView x:Name="AppointmentsListView" Style="{StaticResource APPOINTLV}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Style="{StaticResource LVT}">
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Дата: "/>
                                    <TextBlock Text="{Binding date}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Диагноз: "/>
                                    <TextBlock Text="{Binding Diagnos}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Рекомендации: "/>
                                    <TextBlock Text="{Binding Recomendations}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Врач ID: "/>
                                    <TextBlock Text="{Binding doctor_id}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Style="{StaticResource DownP}">
            <Button Content="Изменить информацию о пациенте" Click="EditPatientButton_Click"  />
            <Button Content="Назад" Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Page>
