<Page x:Class="wpf8.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppointmentPage">

    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="Label" x:Key="new">
            <Setter Property="FontSize" Value="14"/>
        </Style>
  
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource BCKG}"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="LVT">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="LVTchild">
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="DownP">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource Default}">
            
        </Style>

        <Style TargetType="TextBlock" >
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>

        <Style TargetType="TextBox" >
            <Setter Property="Height" Value="80"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Height" Value="400"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        

    </Page.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <TextBlock Text="Приём пациента" />
            <TextBlock x:Name="PatientInfoText" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"  >
                <Label Content="Новый приём" Style="{StaticResource new}"/>

                <Label Content="Диагноз:"/>
                <TextBox x:Name="DiagnosisTextBox"/>

                <Label Content="Рекомендации:" />
                <TextBox x:Name="RecommendationsTextBox"/>

                <Button Content="Сохранить приём" Click="SaveAppointmentButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="1" >
                <Label Content="История приёмов" Style="{StaticResource new}"/>

                <ListView x:Name="AppointmentsListView" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Style="{StaticResource LVT}">
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Дата: "/>
                                    <TextBlock Text="{Binding date}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Диагноз: "/>
                                    <TextBlock Text="{Binding Diagnos}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Рекомендации: "/>
                                    <TextBlock Text="{Binding Recomendations}"/>
                                </StackPanel>
                                <StackPanel Style="{StaticResource LVTchild}">
                                    <TextBlock Text="Врач ID: "/>
                                    <TextBlock Text="{Binding doctor_id}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Style="{StaticResource DownP}">
            <Button Content="Изменить информацию о пациенте" Click="EditPatientButton_Click"  />
            <Button Content="Назад" Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Page>
