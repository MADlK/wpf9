<Page x:Class="wpf8.Pages.LoginPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage1">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource Default}">
            <Setter Property="Margin" Value="40,20,40,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource ForeGround}"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="300"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Background" Value="{DynamicResource BCKG}"/>
            <Setter Property="BorderBrush" Value="black"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Page.Resources>

    <Border Grid.Column="0">
        <StackPanel>
            <TextBlock Text="Вход"/>
            <Label Content="ID врача:"/>
            <TextBox x:Name="IdTextBox"/>
            <Label Content="Пароль:" />
            <PasswordBox x:Name="PasswordBox"/>
            <Button Content="Войти" Click="LoginButton_Click" />
            <Button Content="Регистрация" Click="RegisterButton_Click"/>
        </StackPanel>
    </Border>
</Page>
