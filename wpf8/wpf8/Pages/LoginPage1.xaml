<Page x:Class="wpf8.Pages.LoginPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage1">

    <Page.Resources>
        
    </Page.Resources>

    <Border Grid.Column="0" Style="{StaticResource lp1B}">
        <StackPanel Style="{StaticResource LP1SP}">
            <TextBlock Text="Вход" Style="{StaticResource LP1TBlock}"/>
            <Label Content="ID врача:" Style="{StaticResource LBLLP1}"/>
            <TextBox x:Name="IdTextBox" Style="{StaticResource LP1TBOX}"/>
            <Label Content="Пароль:" Style="{StaticResource LBLLP1}"/>
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource LPPBB}"/>
            <Button Content="Войти" Click="LoginButton_Click" Style="{StaticResource LP1BTN}"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Style="{StaticResource LP1BTN}"/>
        </StackPanel>
    </Border>
</Page>
